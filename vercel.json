{
  "version": 2,

  "cleanUrls": false,

  "buildCommand": "npm run build",
  "outputDirectory": ".",

  "redirects": [
    { "source": "/levels", "destination": "/levels.html", "permanent": true },
    { "source": "/level", "destination": "/levels.html", "permanent": true },
    { "source": "/level.html", "destination": "/levels.html", "permanent": true }
  ],

  "headers": [
    {
      "source": "/levels.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/data/level-videos.json",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    },
    {
      "source": "/components/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600" }
      ]
    },
    {
      "source": "/scripts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=600" }
      ]
    }
  ]
}
