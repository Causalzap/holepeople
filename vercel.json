{
  "version": 2,
  "cleanUrls": false,

  "buildCommand": "npm run build",
  "outputDirectory": ".",

  "redirects": [
    { "source": "/levels", "destination": "/levels.html", "permanent": true },
    { "source": "/level", "destination": "/levels.html", "permanent": true },
    { "source": "/level.html", "destination": "/levels.html", "permanent": true }
  ],

  "headers": [
    {
      "source": "/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/data/(.*)\\.json",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    },
    {
      "source": "/components/(.*)\\.html",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=60, must-revalidate" }
      ]
    },
    {
      "source": "/scripts/(.*)\\.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=60, must-revalidate" }
      ]
    },
    {
      "source": "/styles/(.*)\\.css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=60, must-revalidate" }
      ]
    }
  ]
}
